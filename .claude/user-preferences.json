{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "User preferences for Claude Code hooks and skills behavior",
  
  "suppressReminders": {
    "$comment": "Control which reminder hooks should be suppressed",
    "claude-context": false,
    "serena": false,
    "memory-search": false,
    "workflow-suggestions": false,
    "token-efficiency": false
  },
  
  "experienceLevel": "intermediate",
  "$comment_experienceLevel": "Options: beginner | intermediate | expert. Affects verbosity of messages.",
  
  "throttling": {
    "$comment": "Override default cooldown periods (in seconds)",
    "claude-context-reminder": 300,
    "workflow-pattern-detector": 600,
    "smart-tool-enforcer": 0
  },
  
  "thresholds": {
    "$comment": "Override default file size thresholds for smart-tool-enforcer",
    "maxFileSizeLines": 500,
    "warnFileSizeLines": 200,
    "complexityMultiplier": 1.0
  },
  
  "skills": {
    "$comment": "Skill-specific preferences",
    "enableFileTriggering": true,
    "minimumConfidence": {
      "critical": 0.7,
      "high": 0.8,
      "medium": 0.85,
      "low": 0.9
    }
  },
  
  "output": {
    "$comment": "Control output formatting",
    "compactMessages": false,
    "useEmoji": true,
    "showTokenSavings": true
  }
}

